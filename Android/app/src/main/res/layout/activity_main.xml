<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/main_next_student_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/main_next_student_button"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/main_next_student_button"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:background="@drawable/button_shape"
        android:text="@string/next"
        android:textColor="@drawable/button_text_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_number_of_students_left"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="@string/number_of_students_left"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/main_next_student_button"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/main_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="#54CCFF"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/main_number_of_students_left"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>